<!DOCTYPE html>
<html>
  <head>
    <title>ChildShare</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-dark bg-primary text-white">
      <%= link_to 'Home', home_path, class: "text-white" %>
      |
      <% if current_user.present? %>
        <span>Hi, <%= current_user.first_name %></span>
        |
        <%= link_to('Account Postings', bookings_path, class: "text-white") %>
        |
        <%= link_to('Job Board', job_board_path, class: "text-white") %>
        |
        <%= link_to('Review', new_review_path, class: "text-white") %>
        |
        <%= link_to('Sign Out', session_path, method: :delete, class: "text-white") %>
        |
        <% else %>
        <%= link_to('Sign In', new_session_path, class: "text-white") %>
        |
        <%= link_to('Sign Up', new_user_path, class: "text-white") %>
      <% end %>
    </nav>
    
    <% flash.each do |type, message| %>
      <div class="alert alert-<%= type %> alert-dismissible fade show">
        <%= message %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
