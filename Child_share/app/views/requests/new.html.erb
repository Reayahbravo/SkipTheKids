<div class="bg-req pic">
  <div class="container-fluid front space text-center">
    <div class="restraint">
    <h1>Request For Sitter</h1>
    </div>
  </div>
</div>


<% if user_signed_in? && can?(:post, @offer) && @offer.post?  %>
  <%= link_to 'Post', offer_bookings_path(@offer), method: :post %>
<% end %>

<%= simple_form_for @request do |f| %>
  <div class="bg-4">
    <div class="container-fluid front space blue text-center">
      <div class="restraint">
        <%= f.input :proposed_from, required: false, hint: 'required' %>
        <%= f.input :proposed_to, required: false, hint: 'required' %>
      </div>
    </div>
  </div>

  <div class="bg-2">
    <div class="container-fluid front space blue text-center">
      <div class="restraint">
        <%= f.input :child_number, required: false, hint: 'required' %>
        <%= f.input :note, required: false, hint: 'required' %>
        <%= f.submit 'Post your Request', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
    
<% end %>
